<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:gravity="center"
    tools:orientation="vertical"
    tools:parentTag="LinearLayout">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/vStatusViewImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fast_list_status_view_img_empty" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/vStatusViewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/fast_list_network_error"
        android:textColor="@color/fast_list_color_gray"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/vStatusViewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/fast_list_status_view_btn"
        android:paddingStart="50dp"
        android:paddingTop="5dp"
        android:paddingEnd="50dp"
        android:paddingBottom="5dp"
        android:text="@string/fast_list_refresh"
        android:textSize="15sp" />
</merge>